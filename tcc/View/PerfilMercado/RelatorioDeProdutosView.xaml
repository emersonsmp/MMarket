                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer 
                                Command="{Binding Path=BindingContext.GoSecaoCommand, Source={x:Reference Secoes}}" 
                                CommandParameter="Higiene"/>
                        </Frame.GestureRecognizers>
                        <Label Text="Higiene" FontSize="25"/>
                    </Frame>
                </StackLayout>

                <StackLayout>
                    <Frame Padding="5" Margin="2,5,2,5" HeightRequest="50" BackgroundColor="AliceBlue">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer 
                                Command="{Binding Path=BindingContext.GoSecaoCommand, Source={x:Reference Secoes}}" 
                                CommandParameter="Limpeza"/>
                        </Frame.GestureRecognizers>
                        <Label Text="Limpeza" FontSize="25"/>
                    </Frame>
                </StackLayout>

                <StackLayout>
                    <Frame Padding="5" Margin="2,5,2,5" HeightRequest="50" BackgroundColor="AliceBlue">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer 
