                    </Frame>
                </StackLayout>

                <StackLayout>
                    <Frame Padding="5" Margin="2,5,2,5" HeightRequest="50" BackgroundColor="AliceBlue">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer 
                                Command="{Binding Path=BindingContext.GoSecaoCommand, Source={x:Reference Secoes}}" 
                                CommandParameter="Jardinagem"/>
                        </Frame.GestureRecognizers>
                        <Label Text="Jardinagem" FontSize="25"/>
                    </Frame>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>